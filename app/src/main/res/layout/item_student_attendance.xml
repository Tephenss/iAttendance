<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/attendanceCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/subjectCodeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CS 101"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subjectNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computer Science"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present"
                android:textColor="#FFFFFF"
                android:background="#4CAF50"
                android:padding="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/sectionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Section A"
                android:textColor="#757575"
                android:textSize="13sp"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_people"
                android:drawableTint="#757575" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 AM - 10:00 AM"
                android:textColor="#757575"
                android:textSize="13sp"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_schedule"
                android:drawableTint="#757575" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

